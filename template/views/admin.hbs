    <link rel="stylesheet" href="css/prod.css" class="">
</head>
<body>
    {{>header}}

    <div class="main" >
        {{#if msg}}
<h1>{{msg}}</h1>
        {{else}}
    {{#each product}}
<div class="box">
<div class="img"><img src="/avator?id={{this._id}}" ></div>
<h1>{{this.name}}</h1>
